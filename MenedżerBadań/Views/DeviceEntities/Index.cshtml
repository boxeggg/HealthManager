@using HealthManager.Models.ViewModels;
@model IEnumerable<DevicesViewModel>


@{
    ViewData["Title"] = "Index";
}

<h1>Moje urządzenia</h1>

<p>
    <a asp-action="Create">Sparuj nowe urządzenie</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CanSaveMeasures)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NeedConnection)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CanSaveMeasures)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NeedConnection)
            </td>

            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa-regular fa-pen-to-square" style="color: #a4138a;"></i></a> |
                    <a asp-action="Details" asp-route-id="@item.Id"><i class="fa-solid fa-list" style="color: #a4138a;"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash" style="color: #a4138a;"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
