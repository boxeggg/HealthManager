@model HealthManager.Models.ViewModels.ProfileViewModel
<h1>Utwórz profil użytkownika</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateProfile">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"> Imię: </label>
                <input asp-for="FirstName" class="form-control" required/>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label">Nazwisko: </label>
                <input asp-for="LastName" class="form-control" required />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Height" class="control-label"> Wzrost: </label>
                <input asp-for="Height" class="form-control" type="number" min="0" />
                <span asp-validation-for="Height" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label"> Waga: </label>
                <input asp-for="Weight" class="form-control"  type="number" min="0" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BloodType"> Grupa krwi</label>
                <select asp-for="BloodType" class="form-control">
                    @foreach (var value in Enum.GetValues(typeof(HealthManager.Data.Entities.BloodType)))
                    {
                        <option value="@value">@value</option>
                    }
                </select>
            </div>
            <br/>


            <div class="form-group">
                <input type="submit" value="Utwórz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">Powrót</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}