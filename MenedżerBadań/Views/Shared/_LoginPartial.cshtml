@using Microsoft.AspNetCore.Identity
@using HealthManager.Data.Entities
@inject SignInManager<UserEntity> SignInManager
@inject UserManager<UserEntity> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><i class="fa-solid fa-user" style="color: #a4138a;"></i></a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark"><i class="fa-solid fa-right-from-bracket" style="color: #a4138a;"></i></button>
        </form>
    </li>
}

</ul>
